<div>
	<h1>ログイン</h1>
</div>

<div>
	<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
		<div>
			<%= f.label :email, 'メールアドレス' %>
			<%= f.email_field :email %>
		</div>
		
		<div>
			<%= f.label :password, 'パスワード' %>
			<%= f.password_field :password %>
		</div>
		
		<%= f.submit 'ログイン' %>
		
	<% end %>
</div>

<P>初めて利用する場合は　<%= link_to '新規登録', signup_path %></P>